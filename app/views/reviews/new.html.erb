<h1>Leave a review</h1>

<%# action="reviews"  method POST %>
<%# action="restaurants/12/reviews" %>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0,1,2,3,4,5]%>
  <%= f.submit %>
<% end %>
<%= link_to "Show this restaurant", @restaurant, class: "btn btn-primary" %>
<%= link_to "Back to restaurants", restaurants_path, class: "btn btn-primary" %>
